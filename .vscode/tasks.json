{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "env": {
      "GOOS": "js",
      "GOARCH": "wasm"
    }
  },
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "Codebook.wasm", "main.go"],
      "problemMatcher": ["$go"]
    }
  ]
}
